            />
            <label for="validationServer01" class="user-label"
              >City</label
            >
            <div id="validationServer04Feedback" class="invalid-feedback">
              Please provide a valid city.
            </div>
          </div>     
          <div class="col-md-6 position-relative d-flex flex-column mb-3">
            <input
              type="number"
              autocomplete="on"
              class="input form-control is-invalid"
              id="validationServer01"
              value=""
              name="age"
              required
            />
            <label for="validationServer01" class="user-label"
              >Age</label
            >
            <div id="validationServer04Feedback" class="invalid-feedback">
              Please provide a your age.
            </div>
          </div>     
          <div class="col-md-6 position-relative d-flex flex-column mb-3">
            <input
              type="text"
              autocomplete="on"
              class="input form-control is-invalid"
              id="validationServer01"
              value=""
              name="gender"
              required
            />
            <label for="validationServer01" class="user-label"
